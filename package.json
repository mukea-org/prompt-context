{
  "name": "prompt-context",
  "displayName": "%extension.displayName%",
  "description": "%extension.description%",
  "version": "1.0.1",
  "icon": "icon.png",
  "publisher": "mukea",
  "repository": {
    "type": "git",
    "url": "https://github.com/mukea-org/prompt-context"
  },
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Chat",
    "AI",
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "prompt-context.addHeader",
        "title": "%command.addHeader.title%",
        "category": "%command.category%"
      },
      {
        "command": "prompt-context.copyContext",
        "title": "%command.copyContext.title%",
        "category": "%command.category%"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "prompt-context.addHeader",
          "group": "1_modification",
          "when": "editorTextFocus"
        },
        {
          "command": "prompt-context.copyContext",
          "group": "9_cutcopypaste",
          "when": "editorTextFocus"
        }
      ],
      "editor/title": [
        {
          "command": "prompt-context.copyContext",
          "group": "navigation",
          "when": "resourceScheme == file"
        }
      ],
      "editor/title/context": [
        {
          "command": "prompt-context.copyContext",
          "group": "9_cutcopypaste",
          "when": "resourceScheme == file"
        }
      ],
      "explorer/context": [
        {
          "command": "prompt-context.copyContext",
          "group": "9_cutcopypaste",
          "when": "resourceScheme == file"
        }
      ]
    },
    "configuration": {
      "title": "%config.title%",
      "properties": {
        "prompt-context.maxFileSize": {
          "type": "number",
          "default": 100,
          "description": "%config.maxFileSize.description%"
        },
        "prompt-context.excludedExtensions": {
          "type": "array",
          "default": [
            ".png",
            ".jpg",
            ".jpeg",
            ".gif",
            ".svg",
            ".ico",
            ".pdf",
            ".zip",
            ".exe",
            ".dll",
            ".node",
            ".bin",
            ".lock",
            ".pyc"
          ],
          "description": "%config.excludedExtensions.description%"
        }
      }
    }
  },
  "scripts": {
    "build": "pnpm dlx @vscode/vsce package --no-dependencies",
    "vscode:prepublish": "pnpm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.107.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.1",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1",
    "webpack": "^5.103.0",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "tree-node-cli": "^1.6.0"
  }
}
